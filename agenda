<div *ngIf="dynamicObject['agente'] === 'rcmkpmg' && dynamicObject['param1'] === 'consolidado'">
  <div class="container mt-4">
    <!-- Cabeçalho -->
    <div class="row mb-4">
      <div class="col">
        <h2 class="text-primary">
          Relatório de Auditoria - {{ objetoAudDetalhes[0]?.periodo_apuracao }}
        </h2>
      </div>
    </div>

    <!-- Sumários Individuais dos Relatórios -->
    <div class="card mb-4">
      <div class="card-header bg-light">
        <h4 class="mb-0">Sumários dos Relatórios Individuais</h4>
      </div>
      <div class="card-body">
        <div *ngFor="let item of objetoAudDetalhes" class="mb-3">
          <div class="card">
            <div class="card-body">
              <div>
                <h5>Sumário Executivo</h5>
                <!-- Renderiza como innerHTML -->
                <div [innerHTML]="item.sumario_executivo_rel"></div>
              </div>
              <div class="mt-3">
                <h5>Racional do Sumário</h5>
                <!-- Racional como texto simples -->
                <p>{{ item.racional_sumario_rel }}</p>
              </div>
            </div>
          </div>
          <hr>
        </div>
      </div>
    </div>

    <!-- Sumário Consolidado do Período (apenas um, do primeiro item) -->
    <div class="card">
      <div class="card-header bg-light">
        <h4 class="mb-0">Sumário do Período Consolidado</h4>
      </div>
      <div class="card-body">
        <div>
          <h5>Sumário Executivo do Período</h5>
          <div [innerHTML]="objetoAudDetalhes[0]?.sumario_executivo_per"></div>
        </div>
        <div class="mt-3">
          <h5>Racional do Sumário do Período</h5>
          <p>{{ objetoAudDetalhes[0]?.racional_sumario_per }}</p>
        </div>
      </div>
    </div>

    <!-- Barra de Ações -->
    <div class="d-flex justify-content-end mt-4">
      <button pButton type="button" label="Voltar" icon="pi pi-arrow-left" class="p-button-outlined p-button-secondary mr-2"></button>
      <button pButton type="button" label="Exportar" icon="pi pi-download" class="p-button-primary"></button>
    </div>
  </div>
</div>




